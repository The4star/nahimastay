<p id="notice"><%= notice %></p>

<h1>Stays</h1>

<table>
  <thead>
    <tr>
      <th>Accommodation</th>
      <th>Start date</th>
      <th>End date</th>
      <th>User</th>
      <th>Created at</th>
      <th>Confirmed</th>
      <th>Rejected</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stays.each do |stay| %>
      <tr>
        <td><%= stay.accommodation %></td>
        <td><%= stay.start_date %></td>
        <td><%= stay.end_date %></td>
        <td><%= stay.user %></td>
        <td><%= stay.created_at %></td>
        <td><%= stay.confirmed %></td>
        <td><%= stay.rejected %></td>
        <td><%= link_to 'Show', stay %></td>
        <td><%= link_to 'Edit', edit_stay_path(stay) %></td>
        <td><%= link_to 'Destroy', stay, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

