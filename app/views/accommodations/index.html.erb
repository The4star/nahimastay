<p id="notice"><%= notice %></p>
<div class="results-wrapper">
<p><%= render '/shared/searchform', class: 'searchform' %></p>

    <% @accommodations.each do |accommodation| %>
        <div class="accommodation-wrapper">
        <h3><%= accommodation.name %></h3>
        <p><%= accommodation.description %></p>
        <p><strong>City: </strong><%= accommodation.city %></p>
        <p>Country:<%= accommodation.country %></p>
        <p>Address: <%= accommodation.address %></p>
        <p>Rating:<%= accommodation.accommodation_rating %></p>
        <p>Available from: <%= accommodation.available_start_date.day %> <%= I18n.l(accommodation.available_start_date, format: "%B") %> <%= accommodation.available_start_date.year %> </p>
        <p>Available Until: <%= accommodation.available_end_date.day %> <%= I18n.l(accommodation.available_start_date, format: "%B") %> <%= accommodation.available_end_date.year %></p>
        <p>Bed type: <%= accommodation.accomtype.name %></p>
        <%= button_to "View Accommodation", accommodation, method: :get, class: "stay-accom-button" %>
     </div>
    <% end %>

 
</div>