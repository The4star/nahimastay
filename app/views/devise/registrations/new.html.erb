<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<div class="top-text-devise">
    <h1>Become a member today!</h1>
    <h3>Start organising your stays and smile like the rest of us! :)</h3>
</div>
<div class="hero-container">'
    <%= image_tag("/img/signup.jpg",  alt: "gauranteed smile if you sign up", class: "hero-image") %>
    <div class="devise">
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'devise-field' %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'devise-field' %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'devise-field' %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: 'devise-button' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
</div>