<p id="notice"><%= notice %></p>
<div class="profile-wrapper">
  <div class="profile-left">
    <% if @profile.first_name && @profile.last_name %>
      <p>
        <strong>Welcome to your profile <%= @profile.first_name %> <%= @profile.last_name%>!</strong> You've been a member since:
        <%= @profile.created_at.inspect %>
      </p>
    <% else %>
      <p> <strong>Welcome to your profile page! Feel free to browse through accommodation but in order to apply to stay at a location we'll need you to <%= link_to 'Finish editing your profile', edit_profile_path(@profile) %></strong></p>
    <% end %>
    
    <% if @profile.uploaded_image.attached? %>
      <%= image_tag @profile.uploaded_image.service_url, class: 'image-size' %>
    <% else %>
      <p>No image for this profile</p>
    <% end %>

      <p>
      <strong>Name:</strong>
      <% if @profile.first_name && @profile.last_name %>
        <%= @profile.first_name %> <%= @profile.last_name %></p>
      <% else %>
        <%= link_to 'Finish editing your profile', edit_profile_path(@profile) %></p>
      <% end %>
      <p>
        <strong>Email:</strong> <%= @profile.user.email %>
      </p>

      <p>
      <strong>Karma balance:</strong>
      <% if @profile.karma_coins %>
        <%= image_tag '/img/kksym.png', class: 'kksym' %> <%= @profile.karma_coins %>
      <% else %>
        <strong>zero</strong> Host your first guest to earn some <%= image_tag '/img/kksym.png', class: 'kksym' %>arma Coins!</p>
      <% end %>
    <p>
      <strong>Bio:</strong>
      <% if @profile.bio %>
        <%= @profile.bio %></p>
      <% else %>
        <%= link_to 'Finish editing your profile', edit_profile_path(@profile) %></p>
      <% end %>

    <p>
      <strong>Host rating:</strong>
      <% if @profile.host_rating %>
        <%= @profile.host_rating %></p>
      <% else %>
        No rating recieved yet</p>
      <% end %>

    <p>
      <strong>Guest rating:</strong>
      <% if @profile.guest_rating %>
        <%= @profile.guest_rating %>
      <% else %>
        No rating recieved yet</p>
      <% end %>

    <p>
    <% if @profile.user.role_id == 2 %>
      You are a <%= @profile.user.role.privilege %>. <%= link_to("Upgrade to premium today!", upgrade_path) %> 
    <% elsif @profile.user.role_id == 3 %>
      You are a <%= @profile.user.role.privilege %>. <%= link_to("Change back to free account", upgrade_path) %> 
    <% end %>
    
    </p>

    <p><%= link_to 'Edit Profile', edit_profile_path(@profile) %> | <%= link_to 'Edit Email & Password', edit_user_registration_path(current_user) %></p>
  </div>
  <div class="profile-right">
    <div class="accommodation-section">
    <% if @profile.user.accommodation %>
      <div class="prof-button-flex">
        <%= button_to "View Stays", accommodation_stays_path(accommodation_id: @profile.user.accommodation.id), method: :get, class: "accom-stay-button" %><%= button_to "View Accommodation", accommodation_path(@profile.user.accommodation.id), method: :get, class: "stay-accom-button" %>
      </div>
    <% else %>
       <div class="prof-button-flex">
        <%= button_to "Add Accommodation", new_accommodation_path(profile_id: @profile.id), method: :get, class: "stay-accom-button" %>
      </div>
    <% end %>
     
    </div>
    <div class="guest-section">
        <p> <strong><%= @profile.first_name %> <%= @profile.last_name  %>'s Guest Profile</strong> </p>
        <%= button_to "View Stays", guest_stays_path(guest_id: @profile.user.id ), method: :get, class: "stay-profile-button" %>
    </div>
  </div>
</div>
